<!-- Latest compiled and minified CSS -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

<!-- jQuery library -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

<!-- Popper JS -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>

<!-- Latest compiled JavaScript -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
<style>
    a {
        text-decoration: none;
    }
</style>
<div class="container-fluid">
    <div class="row mt-2 p-5">
        <div class="col-md-12 bg-dark text-white text-center">
            <h1>Books Details</h1>
        </div>
    </div>
    <div class="col-md-12 table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Title
                        <a href="/books?sort=title"><i class='fas fa-arrow-up' style='font-size:18px'></i></a>
                        <a href="/books?sort=-title"><i class='fas fa-arrow-down' style='font-size:18px'></i></a>
                    </th>
                    <th>Price
                        <a href="/books?sort=price"><i class='fas fa-arrow-up' style='font-size:18px'></i></a>
                        <a href="/books?sort=-price"><i class='fas fa-arrow-down' style='font-size:18px'></i></a>
                    </th>
                    <th>Categories
                        <a href="/books?sort=categories"><i class='fas fa-arrow-up' style='font-size:18px'></i></a>
                        <a href="/books?sort=-categories"><i class='fas fa-arrow-down' style='font-size:18px'></i></a>
                    </th>
                    <th>Authors
                        <a href="/books?sort=authors"><i class='fas fa-arrow-up' style='font-size:18px'></i></a>
                        <a href="/books?sort=-authors"><i class='fas fa-arrow-down' style='font-size:18px'></i></a>
                    </th>
                    <th>Status
                        <a href="/books?sort=status"><i class='fas fa-arrow-up' style='font-size:18px'></i></a>
                        <a href="/books?sort=-status"><i class='fas fa-arrow-down' style='font-size:18px'></i></a>
                    </th>
                </tr>
            </thead>
            <tbody>
                {{#each books}}
                    <tr>
                    <td><a class="btn" href=#{{this.title}} class="btn btn-primary" data-toggle="collapse"><i class="fa fa-plus mr-3" aria-hidden="true"></i></a>{{this.title}}</td>
                    <td>{{this.price}}</td>
                    <td>{{this.categories}}</td>
                    <td>{{this.authors}}</td>
                    <td><button class="btn btn-success">{{this.status}}</button></td>
                    </tr>
                <tr>
                    <div id={{this.title}} class="collapse">
                        {{this.longDescription}}
                    </div>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    <div class="offset-md-8 col-md-4 mb-3">
        <div class="btn-group btn-group-lg">
            <a href="/books?page=1&limit=10" class="btn btn-outline-dark ">1</a>
            <a href="/books?page=2&limit=10" class="btn btn-outline-dark">2</a>
            <a href="/books?page=3&limit=10" class="btn btn-outline-dark">3</a>
            <a href="/books?page=4&limit=10" class="btn btn-outline-dark">4</a>
            <a href="/books?page=5&limit=10" class="btn btn-outline-dark">5</a>
        </div>
    </div>
</div>